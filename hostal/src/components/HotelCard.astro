---
interface Props {
	nombre: string;
	tipoHotel: string;
	ciudad: string;
	valoracion: number;
	precio: number;
	img: string;
}

const { nombre, tipoHotel, ciudad, valoracion, precio, img } = Astro.props;

var tal = "";
if (valoracion > 10 && valoracion < 0) {
	tal = "OUT OF RANGE: error";
} else {
	if (valoracion > 0 && valoracion < 3.5) {
		tal = "Mala";
	} else if (valoracion > 3.5 && valoracion <= 6) {
		tal = "Mao meno";
	} else if (valoracion > 6 && valoracion <= 8) {
		tal = "Buena";
	} else if (valoracion > 8 && valoracion <= 10) {
		tal = "Excelente";
	}
}

---

<div class="hotelCard">
	<img
		src={img}
		alt=""
	/>
	<div class="info">
		<h1>{nombre}</h1>
		<p class="tipoHotel">{tipoHotel}</p>
		<p class="ciudad">Ciudad: {ciudad}</p>
		<p class="valoracion">{valoracion} - {tal}</p>
	</div>
	<div class="price">
		<p>&dollar;{precio}</p>
		<button>
			<svg
				xmlns="http://www.w3.org/2000/svg"
				class="icon icon-tabler icon-tabler-receipt-2"
				width="20"
				height="20"
				viewBox="0 0 24 24"
				stroke-width="1.5"
				stroke="currentColor"
				fill="none"
				stroke-linecap="round"
				stroke-linejoin="round"
				><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path
					d="M5 21v-16a2 2 0 0 1 2 -2h10a2 2 0 0 1 2 2v16l-3 -2l-2 2l-2 -2l-2 2l-2 -2l-3 2"
				></path><path
					d="M14 8h-2.5a1.5 1.5 0 0 0 0 3h1a1.5 1.5 0 0 1 0 3h-2.5m2 0v1.5m0 -9v1.5"
				></path></svg
			>
			Reservar</button
		>
	</div>
</div>

<style>
	.hotelCard {
		max-width: 930px;
		margin: 20px 0px;
		border-radius: 20px;
		display: flex;
		font-size: small;
		height: 150px;
		background-color: white;
		transition: all 0.2s ease-in-out;
	}

	.hotelCard:hover {
		box-shadow: 0px 5px 2px rgba(0, 0, 0, 0.2);
		transform: translateY(-5px);
	}

	.hotelCard img {
		border-radius: 20px 0px 0px 20px;
		width: auto;
		cursor: pointer;
	}

	.hotelCard .info {
		cursor: pointer;
		width: 60%;
		padding: 10px;
		height: 20vh;
		display: flex;
		flex-direction: column;
		gap: 10px;
	}

	.hotelCard .info .valoracion {
		font-weight: bold;
	}

	.hotelCard .price {
		margin: 20px;
		text-align: start;
		width: 15%;
		display: flex;
		flex-direction: column;
		gap: 60px;
		justify-content: center;
		align-items: end;
		cursor: pointer;
	}

	.hotelCard .price button {
		left: 0;
		width: 90%;
		padding: 10px 10px;
		border-radius: 20px;
		display: flex;
		justify-content: center;
		align-items: center;
		background-color: rgba(89, 77, 255, 0.659);
		color: white;
		border: none;
		font-weight: 600;
		gap: 5px;
		cursor: pointer;
	}

	.hotelCard .price button:hover {
		background-color: rgb(40, 25, 255);
	}
</style>
