---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";

class habitacion {
	nombre: string;
	descripcion: string;
	imagen: string;
	localizacion: string;
	precio: number;
	calificacion: number;
	disponibilidad: boolean;
	tipoDeHabitacion: string;
	capacidad: number;
	huespedes: {
		nombre: string;
		apellido: string;
		edad: number;
		documento: string;
		telefono: string;
		fechas: {
			fechaDeSalida: Date;
			fechaDeLlegada: Date;
		};
	};
	servicios: {
		piscina: boolean;
		wifi: boolean;
		estacionamiento: boolean;
		restaurante: boolean;
		bar: boolean;
		spa: boolean;
		gimnasio: boolean;
	};
}
